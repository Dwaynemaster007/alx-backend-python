pipeline {
    agent any

    environment {
        // ID for your GitHub Personal Access Token/Username+Password
        GITHUB_CREDENTIALS = 'github-credentials'
        
        // ID for your Docker Hub Username+Password (dwaynemaster007)
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
        
        // CUSTOMIZATION: Uses your Docker Hub username
        DOCKER_IMAGE = "dwaynemaster007/messaging_app" 
    }

    stages {
        stage('Checkout') {
            steps {
                // Pulls the source code from the project's repository
                git branch: 'main',
                    credentialsId: "${GITHUB_CREDENTIALS}",
                    url: 'https://github.com/alx-backend-python.git'
            }
        }

        stage('Install Dependencies & Run Tests') {
            steps {
                // Task 0: Install dependencies and run pytest
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip3 install --upgrade pip
                pip3 install -r messaging_app/requirements.txt
                pytest messaging_app --junitxml=report.xml
                '''
            }
            post {
                // Task 0: Publish JUnit test report
                always {
                    junit 'report.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                // Task 1: Build the Docker image, tagging it with your user name
                // Assumes Dockerfile is in the 'messaging_app' subdirectory
                sh '''
                docker build -t $DOCKER_IMAGE:latest messaging_app
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                // Task 1: Securely log in and push the image to Docker Hub
                withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                    echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                    docker push $DOCKER_IMAGE:latest
                    '''
                }
            }
        }
    }
}